<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cor_fnd"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorAdm"
    tools:context=".tela_respostas">

    <RelativeLayout
        android:id="@+id/img_fnd"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/fndadm">

    </RelativeLayout>

    <ProgressBar
        android:id="@+id/progressoBarra"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tamanho_barra_progresso"
        android:layout_marginTop="@dimen/activity_real_margin"
        android:layout_marginStart="@dimen/activity_dobro_margin"
        android:layout_marginEnd="@dimen/activity_dobro_margin"
        android:progressBackgroundTint="@color/colorBnc"
        android:progressTint="@color/respostaCerta"
        android:progress="0"
        style='@android:style/Widget.ProgressBar.Horizontal'>

    </ProgressBar>

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="42dp"
        android:layout_marginBottom="@dimen/tamanho_area_botao"
        android:fillViewport="true">

        <GridLayout
            android:columnCount="2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingHorizontal="@dimen/activity_dobro_margin">

            <TextView
                android:id="@+id/pergunta"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/activity_dobro_margin"
                android:layout_marginEnd="@dimen/activity_dobro_margin"
                android:layout_marginTop="@dimen/activity_pergunta_margin"
                android:layout_marginBottom="@dimen/activity_pergunta_margin"
                android:layout_columnWeight="1"
                android:layout_rowWeight="2"
                android:layout_columnSpan="2"
                android:gravity="center"
                android:textSize="@dimen/texto_pergunta"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/colorPrt">

            </TextView>

            <androidx.cardview.widget.CardView
                android:id="@+id/btn_resposta1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/activity_meia_margin"
                android:layout_marginEnd="@dimen/activity_meia_margin"
                android:layout_marginTop="@dimen/activity_real_margin"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardElevation="@dimen/activity_interna_margin"
                app:cardCornerRadius="@dimen/activity_interna_margin"
                app:cardBackgroundColor="@color/card_respostas">

                <TextView
                    android:id="@+id/txt_resposta1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/activity_meia_margin"
                    android:layout_gravity="center"
                    android:textSize="@dimen/texto_respostas"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrt">

                </TextView>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/btn_resposta2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/activity_meia_margin"
                android:layout_marginEnd="@dimen/activity_meia_margin"
                android:layout_marginTop="@dimen/activity_real_margin"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardElevation="@dimen/activity_interna_margin"
                app:cardCornerRadius="@dimen/activity_interna_margin"
                app:cardBackgroundColor="@color/card_respostas">

                <TextView
                    android:id="@+id/txt_resposta2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/activity_meia_margin"
                    android:layout_gravity="center"
                    android:textSize="@dimen/texto_respostas"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrt">

                </TextView>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/btn_resposta3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/activity_meia_margin"
                android:layout_marginEnd="@dimen/activity_meia_margin"
                android:layout_marginTop="@dimen/activity_real_margin"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardElevation="@dimen/activity_interna_margin"
                app:cardCornerRadius="@dimen/activity_interna_margin"
                app:cardBackgroundColor="@color/card_respostas">

                <TextView
                    android:id="@+id/txt_resposta3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/activity_meia_margin"
                    android:layout_gravity="center"
                    android:textSize="@dimen/texto_respostas"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrt">

                </TextView>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/btn_resposta4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/activity_meia_margin"
                android:layout_marginEnd="@dimen/activity_meia_margin"
                android:layout_marginTop="@dimen/activity_real_margin"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardElevation="@dimen/activity_interna_margin"
                app:cardCornerRadius="@dimen/activity_interna_margin"
                app:cardBackgroundColor="@color/card_respostas">

                <TextView
                    android:id="@+id/txt_resposta4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/activity_meia_margin"
                    android:layout_gravity="center"
                    android:textSize="@dimen/texto_respostas"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrt">

                </TextView>

            </androidx.cardview.widget.CardView>

        </GridLayout>

    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/scroll"
        android:layout_marginTop="-92dp"
        android:layout_marginBottom="@dimen/activity_meia_margin"
        android:gravity="center">

        <Button
            android:id="@+id/btn_conferir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/botao_fundo"
            android:paddingHorizontal="@dimen/botao_area_padding"
            android:text="@string/txt_btn_conferir"
            android:enabled="false">

        </Button>

    </RelativeLayout>

</RelativeLayout>