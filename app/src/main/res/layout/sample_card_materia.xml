<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal|center_vertical"
    android:paddingHorizontal="@dimen/activity_interna_margin"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_professor"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:gravity="center"
        android:textAlignment="center"
        android:textSize="@dimen/texto_normal" />

    <TextView
        android:id="@+id/txt_progresso"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:gravity="bottom|center_horizontal"
        android:textStyle="bold"
        android:textSize="@dimen/texto_pontuacao" />

    <TextView
        android:id="@+id/txt_materia"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:gravity="center_horizontal|center_vertical"
        android:textAlignment="center"
        android:textSize="@dimen/texto_normal" />

</LinearLayout>
