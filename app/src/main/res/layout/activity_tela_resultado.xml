<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cor_fnd"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorAdm"
    tools:context=".TelaResultado">

    <RelativeLayout
        android:id="@+id/img_fnd"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/fndadm">

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/txt_principal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="64dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/resultado_comeco"
            android:textSize="32sp"
            android:textAlignment="center"
            android:textColor="@color/colorPrt">

        </TextView>

        <TextView
            android:id="@+id/resultado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleX="1.25"
            android:scaleY="1.25"
            android:textSize="92sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/colorPrt">

        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/resultado_meio"
            android:textSize="32sp"
            android:textAlignment="center"
            android:textColor="@color/colorPrt">

        </TextView>

        <TextView
            android:id="@+id/categoria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="32sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/colorPrt">

        </TextView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_msg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/txt_principal"
        android:layout_marginHorizontal="32dp"
        android:layout_marginBottom="92dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_mensagem"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginBottom="12dp">

        </ImageView>

        <TextView
            android:id="@+id/mensagem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textAlignment="center"
            android:textStyle="italic"
            android:textColor="@color/colorPrt">

        </TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/layout_msg"
        android:layout_marginTop="-92dp"
        android:layout_marginBottom="10dp"
        android:gravity="center">

        <Button
            android:id="@+id/btn_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/botao_fundo"
            android:paddingHorizontal="24dp"
            android:text="@string/resultado_btn">

        </Button>

    </LinearLayout>

</RelativeLayout>